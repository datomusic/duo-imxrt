{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build FlexSPI Debug",
            "command": "export ARMGCC_DIR=/opt/homebrew;./build_flexspi_nor_debug.sh",
            "options": {
                "cwd": "${workspaceFolder}/armgcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}/armgcc"]
            }
        },{
            "type": "shell",
            "label": "Build Debug",
            "command": "export ARMGCC_DIR=/opt/homebrew;./build_debug.sh",
            "options": {
                "cwd": "${workspaceFolder}/armgcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}/armgcc"]
            }
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "export ARMGCC_DIR=/opt/homebrew;./clean.sh",
            "options": {
                "cwd": "${workspaceFolder}/armgcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}/armgcc"]
            }
        }
    ]
}