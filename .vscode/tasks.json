{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build FlexSPI Debug",
            "command": "export ARMGCC_DIR=/opt/homebrew;./build.sh flexspi_nor_debug",
            "options": {
                "cwd": "${workspaceFolder}/armgcc"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/armgcc"
                ]
            }
        },
        {
            "type": "shell",
            "label": "Build Debug",
            "command": "export ARMGCC_DIR=/opt/homebrew;./build.sh debug",
            "options": {
                "cwd": "${workspaceFolder}/armgcc"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/armgcc"
                ]
            }
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "export ARMGCC_DIR=/opt/homebrew;./clean.sh",
            "options": {
                "cwd": "${workspaceFolder}/armgcc"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/armgcc"
                ]
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-g++ build active file",
            "command": "/opt/homebrew/bin/arm-none-eabi-g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
